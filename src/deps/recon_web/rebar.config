  {cowboy, "1.0.*", {git, "git://github.com/ninenines/cowboy.git", {tag, "2.4.0"}}},
  {recon, ".*", {git, "git://github.com/ferd/recon.git",{tag,"2.2.1"}}},
  {jsx, ".*", {git, "git://github.com/talentdeficit/jsx.git", {tag, "v2.6.0"}}}
]}.
