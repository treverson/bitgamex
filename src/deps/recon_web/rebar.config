{lib_dirs, ["deps"]}.

{erl_opts, [
  debug_info,
  {parse_transform, lager_transform},
  warn_export_all,
  warn_unused_import,
  {i, "include"},
  {src_dirs, ["src"]}]}.

{cover_enabled, true}.

{deps, [
